<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".editGiaoDich">


    <!-- Amount -->
    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="left"
        android:hint="0"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/green"
        android:textSize="24sp" />


    <!-- Nhom -->
    <TextView
        android:id="@+id/textGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="left"
        android:hint="Chọn nhóm"
        android:onClick="btnNhom"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20dp"
        app:backgroundTint="@null" />

    <!-- Description -->
    <EditText
        android:id="@+id/noteEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:drawableLeft="@drawable/outline_comment_24"
        android:gravity="left"
        android:hint="    Thêm ghi chú"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:backgroundTint="@null" />

    <!-- Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:drawableLeft="@drawable/baseline_calendar_month_241"
            android:gravity="left"
            android:onClick="btnCalendar"
            android:padding="16dp"
            android:text="   Ngày"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />
    </LinearLayout>


    <!-- Spinner Account -->
    <TextView
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableStart="@drawable/baseline_account_balance_wallet_24"
        android:hint="   Tài Khoản"
        android:inputType="date"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/gray" />

    <!-- Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_save_wallet"
            android:gravity="center"
            android:text="Lưu"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />
    </LinearLayout>

